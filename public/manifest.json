{
	"manifest_version": 3,
	"short_name": "Ace Taxis PWA",
	"name": "Ace Taxis",
	"description": "Progressive Web App for Ace Taxis",
	"id": "/",
	"start_url": "/",
	"display": "standalone",
	"background_color": "#ffffff",
	"theme_color": "#ffffff",
	"icons": [
		{
			"src": "/logo.png",
			"sizes": "192x192",
			"type": "image/png"
		},
		{
			"src": "/logo.png",
			"sizes": "512x512",
			"type": "image/png"
		}
	],
	"permissions": ["browsingData", "storage"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": "/logo.png"
	}
}
